    <root>
        <level value="DEBUG" />
        <appender-ref ref="DiagnosticConsole" />
        <appender-ref ref="RollingFile" />
        <!--<appender-ref ref="Elmah" />-->
    </root>

    <logger name="ActivityLog">
        <level value="DEBUG" />
      <appender-ref ref="RollingFile" />
      <!--<appender-ref ref="ActivityLogAdoNetAppender" />-->
