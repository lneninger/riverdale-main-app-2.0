{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "none",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "rootDir": "./",
    "outDir": "wwwroot"
  },
  "include": [
    "widget/**/*"
  ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
